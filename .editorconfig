# editorconfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true

[*.{json,yml,md,babelrc,eslintrc,remarkrc}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.{js}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
